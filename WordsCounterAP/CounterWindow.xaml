<Window x:Class="WordsCounterAP.CounterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WordsCounterAP"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="CounterWindow"
        Height="450" Width="600"
        MinHeight="250" MinWidth="520">
    <Grid Margin="5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.RowSpan="2" BorderBrush="DarkGray" BorderThickness="1" Grid.ColumnSpan="2"></Border>
        <ProgressBar x:Name="CounterProgress" Margin="5" Grid.Column="1" VerticalAlignment="Bottom" Height="15" Visibility="Collapsed" IsIndeterminate="True"></ProgressBar>
        <DataGrid x:Name="MainDataGrid" ItemsSource="{Binding WordCounts}" Margin="5" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Words" Binding="{Binding Word}" Width="2*"></DataGridTextColumn>
                <DataGridTextColumn Header="Counter" Binding="{Binding Count}" Width="*"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Grid.Column="1" Margin="5" Content="Load File" VerticalAlignment="Top" Height="21" Click="LoadFile_BtnClick"></Button>
        <Button x:Name="CountWordsBtn" Grid.Column="1" Margin="5,30" Content="Count Words" VerticalAlignment="Top" Height="21" Click="CountWords_BtnClick" IsEnabled="False"></Button>
        <Button x:Name="CancelBtn" Grid.Column="1" Margin="5,55,5,5" Content="Cancel" VerticalAlignment="Top" Height="21" Click="CancelBtn_Click" IsEnabled="False"></Button>

        <TextBox x:Name="LogInfo" Text="{Binding LogText}" IsReadOnly="True" Grid.Column="1" Margin="5,90,5,25" BorderThickness="0" TextChanged="TextBox_TextChanged"></TextBox>
    </Grid>
</Window>
